<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Projeto002_TipoPaginaXF.TipoPagina.Navigation.Pagina1"
             Title="Página tipo NavigationPage">
    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Pesquisa" Icon="lupa.png" />
        <ToolbarItem Text="Detalhes" Icon="horus.png"/>
       
        
    </ContentPage.ToolbarItems>
    <ContentPage.Content>
        <StackLayout>
            <Label Text="Informações detalhadas"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />

            <Button Text="Ir para próxima página(2)" Clicked="MudarPagina2"/>
            <Button Text="Chamar Modal" Clicked="ChamarModal" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>